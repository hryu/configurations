 '(c-default-style
   (quote
    ((c-mode . "linux")
     (c++-mode . "stroustrup")
     (java-mode . "java")
     (awk-mode . "awk")
     (other . "linux"))))
 '(c-tab-always-indent nil)
 '(compilation-scroll-output t)
 '(compile-command "ARCH=arm64 CROSS_COMPILE=aarch64-linux-gnu- INSTALL_PATH=installed make all -j4 O=arm64-objs")
 '(cscope-do-not-update-database t)
 '(current-language-environment "UTF-8")
 '(git-append-signed-off-by t)
 '(global-auto-revert-mode t)
 '(grep-command
   "grep -i -n -H -R --exclude=*.o --exclude=*.so --exclude=*.a --exclude=*.ko --exclude-dir=CVS --exclude-dir=.svn --exclude-dir=.git --exclude-dir=.svn --include=* -w ")
 '(grep-scroll-output t)
 '(gud-gdb-command-name "gdb-multiarch -i=mi")
 '(make-backup-files nil)
 '(scroll-step 1)
 '(show-paren-mode t)
 '(show-trailing-whitespace t)
 '(transient-mark-mode t))
